<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_calls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".Addphonecalls">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_form_adds_phonecalls_to_phonelog"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="110dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="@string/customer_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />


    <EditText
        android:id="@+id/customer_name_et"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:hint="@string/customer_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/callee"
        android:layout_width="112dp"
        android:layout_height="30dp"
        android:text="@string/callee_number"
        app:layout_constraintBottom_toTopOf="@+id/caller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.786" />

    <EditText
        android:id="@+id/callee_et"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="@string/hint_number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/callee"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/caller"
        android:layout_width="113dp"
        android:layout_height="31dp"
        android:layout_marginTop="152dp"
        android:text="@string/caller_number"
        app:layout_constraintEnd_toStartOf="@+id/begin_et"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />


    <EditText
        android:id="@+id/caller_et"
        android:layout_width="149dp"
        android:layout_height="37dp"
        android:layout_marginTop="152dp"
        android:hint="@string/hint_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toEndOf="@+id/caller"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/begin"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:layout_marginTop="272dp"
        android:text="@string/begin_date_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/begin_et"
        android:layout_width="157dp"
        android:layout_height="40dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:hint="@string/hint_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/begin"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/end"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="328dp"
        android:text="@string/end_date_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/end_et"
        android:layout_width="158dp"
        android:layout_height="42dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="264dp"
        android:hint="@string/hint_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/end"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/submit_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="@string/print"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end" />

    <TextView
        android:id="@+id/print_res"
        android:layout_width="402dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/submit_add_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/print"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>